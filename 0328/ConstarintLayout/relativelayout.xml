<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 상단 이미지 -->
    <ImageView
        android:id="@+id/img_company"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:src="@drawable/img_company"
        android:layout_alignParentTop="true" />

    <!-- 아이디 입력란 -->
    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:layout_below="@id/img_company"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_company"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/tv_id"
        android:layout_marginStart="10dp" />

    <!-- 비밀번호 입력란 -->
    <TextView
        android:id="@+id/tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:layout_below="@id/et_id"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_id"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/tv_pw"
        android:layout_marginStart="10dp" />

    <!-- 로그인/회원가입 버튼 -->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:layout_below="@id/et_pw"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:layout_below="@id/et_pw"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/btn_login"
        android:layout_marginStart="10dp" />

    <!-- 하단 텍스트 -->
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="입력한 내용이 여기에 표시됩니다."
        android:layout_below="@id/btn_login"
        android:layout_marginTop="20dp"
        android:gravity="center" />
</RelativeLayout>